<%- include('../port/layout-start', {title: title}) %>
    <%- include('../port/menu') %>

        <h1>
            <%= title %>
        </h1>

        <div class="row">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-body">

                        <h5 class="card-title">
                            <%= book.title %>
                        </h5>
                        <p class="card-text">
                            <%= book.desc %>
                        </p>
                        <p class="card-text">
                            <%= book.authors %>
                        </p>
                        <img class="card-img-top" src="../../load/fileCover/<%= book.fileCover[0].filename %>"
                            alt="image" width="50%" height="50%">
                        <a class="btn btn-sm btn-primary" href="/api/books/<%= book.id %>/download">Скачать файл
                            книги</a>

                        <div class="text-right">
                            <a class="btn btn-sm btn-primary" href="/api/books/update/<%= book.id %>">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <form action="/api/books/delete/<%= book.id %>" method="POST" class="d-inline">
                                <button class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <%- include('../port/layout-end') %>